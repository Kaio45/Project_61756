<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.ConnectFrameController">
   <children>
      <Label layoutX="90.0" layoutY="30.0" styleClass="label-header" text="Server Connection" />
      
      <Label layoutX="50.0" layoutY="100.0" styleClass="label-text" text="Server IP:" />
      <TextField fx:id="ipTxt" layoutX="130.0" layoutY="95.0" text="localhost" />
      
      <Label layoutX="50.0" layoutY="150.0" styleClass="label-text" text="Port:" />
      <TextField fx:id="portTxt" layoutX="130.0" layoutY="145.0" text="5555" />
      
      <Button fx:id="connectBtn" layoutX="130.0" layoutY="202.0" mnemonicParsing="false" onAction="#connectToServer" prefWidth="115.0" styleClass="btn-primary" text="Connect" />
      <Button fx:id="exitBtn" layoutX="320.0" layoutY="250.0" mnemonicParsing="false" onAction="#getExitBtn" styleClass="btn-danger" text="Exit" />
      
      <Label fx:id="errorLabel" layoutX="50.0" layoutY="255.0" styleClass="label-error" />
   </children>
</AnchorPane>
