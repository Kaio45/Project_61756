<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #2D3447;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.ConnectFrameController">
   <children>
      <Label layoutX="116.0" layoutY="35.0" text="Server Connection" textFill="WHITE">
         <font>
            <Font name="Segoe UI Bold" size="20.0" />
         </font>
      </Label>
      
      <Label layoutX="50.0" layoutY="100.0" text="Server IP:" textFill="WHITE">
         <font>
            <Font name="Segoe UI Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="ipTxt" layoutX="150.0" layoutY="95.0" text="localhost" style="-fx-background-radius: 10;" />
      
      <Label layoutX="50.0" layoutY="150.0" text="Port:" textFill="WHITE">
         <font>
            <Font name="Segoe UI Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="portTxt" layoutX="150.0" layoutY="145.0" text="5555" style="-fx-background-radius: 10;" />
      
      <Button fx:id="connectBtn" layoutX="150.0" layoutY="210.0" mnemonicParsing="false" onAction="#connectToServer" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold;" text="Connect" />
      
      <Button fx:id="exitBtn" layoutX="320.0" layoutY="250.0" mnemonicParsing="false" onAction="#getExitBtn" style="-fx-background-color: #e96767; -fx-text-fill: white; -fx-background-radius: 20;" text="Exit" />
      
      <Label fx:id="errorLabel" layoutX="50.0" layoutY="255.0" textFill="#ff6b6b">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>