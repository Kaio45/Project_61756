<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #2D3447;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.LoginFrameController">
   <children>
      <Label layoutX="145.0" layoutY="35.0" text="User Login" textFill="WHITE">
         <font>
            <Font name="Segoe UI Bold" size="24.0" />
         </font>
      </Label>
      
      <Label layoutX="50.0" layoutY="100.0" text="Username:" textFill="WHITE">
         <font>
            <Font name="Segoe UI Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="userTxt" layoutX="150.0" layoutY="95.0" style="-fx-background-radius: 10;" />
      
      <Label layoutX="50.0" layoutY="150.0" text="Password:" textFill="WHITE">
         <font>
            <Font name="Segoe UI Bold" size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="passTxt" layoutX="150.0" layoutY="145.0" style="-fx-background-radius: 10;" />
      
      <Button fx:id="loginBtn" layoutX="150.0" layoutY="210.0" mnemonicParsing="false" onAction="#login" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold;" text="Login" />
      
      <Button fx:id="exitBtn" layoutX="320.0" layoutY="250.0" mnemonicParsing="false" onAction="#getExitBtn" style="-fx-background-color: #e96767; -fx-text-fill: white; -fx-background-radius: 20;" text="Exit" />
      
      <Label fx:id="errorLabel" layoutX="50.0" layoutY="255.0" textFill="#ff6b6b">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>