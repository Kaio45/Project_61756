<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="350.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.RegisterController">
   <children>
      <Label layoutX="70.0" layoutY="25.0" styleClass="label-header" text="New Subscriber" />
      
      <TextField fx:id="userTxt" layoutX="50.0" layoutY="80.0" prefHeight="35.0" prefWidth="250.0" promptText="Username" />
      <TextField fx:id="nameTxt" layoutX="50.0" layoutY="130.0" prefHeight="35.0" prefWidth="250.0" promptText="First Name" />
      <TextField fx:id="surnameTxt" layoutX="50.0" layoutY="180.0" prefHeight="35.0" prefWidth="250.0" promptText="Last Name" />
      <TextField fx:id="phoneTxt" layoutX="50.0" layoutY="230.0" prefHeight="35.0" prefWidth="250.0" promptText="Phone Number" />
      <TextField fx:id="emailTxt" layoutX="50.0" layoutY="280.0" prefHeight="35.0" prefWidth="250.0" promptText="Email Address" />
      
      <Label fx:id="statusLbl" alignment="CENTER" layoutX="25.0" layoutY="325.0" prefWidth="300.0" styleClass="label-subheader" />

      <Button fx:id="regBtn" layoutX="50.0" layoutY="360.0" mnemonicParsing="false" onAction="#register" prefHeight="40.0" prefWidth="150.0" styleClass="btn-success" text="Register Client" />
      <Button fx:id="closeBtn" layoutX="210.0" layoutY="360.0" mnemonicParsing="false" onAction="#closeWindow" prefHeight="40.0" prefWidth="90.0" styleClass="btn-danger" text="Cancel" />
   </children>
</AnchorPane>
