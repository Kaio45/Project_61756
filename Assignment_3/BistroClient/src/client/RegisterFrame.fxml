<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="350.0" style="-fx-background-color: #2D3447;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.RegisterController">
   <children>
      <Label layoutX="76.0" layoutY="25.0" text="New Subscriber" textFill="WHITE">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Label>
      
      <TextField fx:id="userTxt" layoutX="50.0" layoutY="80.0" prefHeight="35.0" prefWidth="250.0" promptText="Username" style="-fx-background-radius: 20;" />
      
      <TextField fx:id="nameTxt" layoutX="50.0" layoutY="130.0" prefHeight="35.0" prefWidth="250.0" promptText="First Name" style="-fx-background-radius: 20;" />
      
      <TextField fx:id="surnameTxt" layoutX="50.0" layoutY="180.0" prefHeight="35.0" prefWidth="250.0" promptText="Last Name" style="-fx-background-radius: 20;" />
      
      <TextField fx:id="phoneTxt" layoutX="50.0" layoutY="230.0" prefHeight="35.0" prefWidth="250.0" promptText="Phone Number" style="-fx-background-radius: 20;" />
      
      <TextField fx:id="emailTxt" layoutX="50.0" layoutY="280.0" prefHeight="35.0" prefWidth="250.0" promptText="Email Address" style="-fx-background-radius: 20;" />
      
      <Label fx:id="statusLbl" alignment="CENTER" layoutX="25.0" layoutY="325.0" prefWidth="300.0" textFill="#ffd700">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>

      <Button fx:id="regBtn" layoutX="50.0" layoutY="360.0" mnemonicParsing="false" onAction="#register" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold;" text="Register Client">
         <font>
            <Font size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>

      <Button fx:id="closeBtn" layoutX="210.0" layoutY="360.0" mnemonicParsing="false" onAction="#closeWindow" prefHeight="40.0" prefWidth="90.0" style="-fx-background-color: #e96767; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold;" text="Cancel">
         <font>
            <Font size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>