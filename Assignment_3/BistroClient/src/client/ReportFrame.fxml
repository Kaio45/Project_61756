<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="800.0" style="-fx-background-color: #34495e;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.ReportController">
   <children>
      <Label layoutX="280.0" layoutY="20.0" text="Manager Dashboard" textFill="WHITE">
         <font> <Font name="System Bold" size="24.0" /> </font>
      </Label>

      <Label layoutX="50.0" layoutY="70.0" text="1. Orders &amp; Status Report (Pie Chart)" textFill="#f1c40f">
         <font> <Font name="System Bold" size="16.0" /> </font>
      </Label>

      <PieChart fx:id="statusPieChart" layoutX="50.0" layoutY="100.0" prefHeight="280.0" prefWidth="700.0" style="-fx-background-color: #2c3e50; -fx-background-radius: 20;" />

      <Label layoutX="50.0" layoutY="400.0" text="2.Subscribers Activity Time Report (Bar Chart)" textFill="#3498db">
         <font> <Font name="System Bold" size="16.0" /> </font>
      </Label>

      <BarChart fx:id="activityChart" layoutX="50.0" layoutY="430.0" prefHeight="250.0" prefWidth="700.0" style="-fx-background-color: #2c3e50; -fx-background-radius: 20;">
        <xAxis>
          <CategoryAxis label="Hour of Day" side="BOTTOM" tickLabelFill="WHITE" fx:id="xAxis" />
        </xAxis>
        <yAxis>
          <NumberAxis label="Orders" side="LEFT" tickLabelFill="WHITE" />
        </yAxis>
      </BarChart>

      <Button layoutX="350.0" layoutY="736.0" mnemonicParsing="false" onAction="#closeWindow" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Close" />
      <Label fx:id="delayLabel" layoutX="33.0" layoutY="680.0" prefHeight="72.0" prefWidth="311.0" textFill="WHITE" />
   </children>
</AnchorPane>
